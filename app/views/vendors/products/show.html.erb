<div class="container mt-5">
  <div class="row">
    <div class="col-8">
      <div>
        <%= @product.title %>
      </div>
      <div>

        <%= @product.price %>
      </div>
      <div>
        <%= @product.currency %>
      </div>
      <div>
        <strong> Categories</strong>
        <% @product.categories.each do |category| %>
          <%= category.name %>
        <% end %>
      </div>
    </div>
    <div class="col-4">
      <%= link_to "Edit", edit_vendors_product_path(@product), class: 'btn btn-primary' %>
      <%= link_to "Delete", vendors_product_path(@product), data: { turbo_method: :delete,
                    turbo_confirm: "Are you sure?"}, class: 'btn btn-danger' %>
    </div>
  </div>
</div>
